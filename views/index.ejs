<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <style>
       #b{
            background-image:url(https://goo.gl/Iq1gIF);

        }
  </style>
  </head>
  <body id="b">
    <h1><%= title %></h1>
    <div class="container">
        <div class="jumbotron">
          <!-- <h2>URL Shortener</h2> -->

          <form class="form-horizontal">
            <div class="form-group"><h4>Please enter the URL in the format "http://www.xyz.com"</h4>
              <input type="text" class="form-control" id="inp" placeholder="Enter URL">
            </div>
            <div class="form-group">
              <div><button type="button" id="btn" class="btn btn-success">Generate Short URL</button></div>
            </div>
          </form>
       </div>
       <div class="jumbotron">
            <input type="text" class="form-control" id="output" placeholder="Your Shortened URL is">
       </div>
    </div>


    <script>
        $(document).ready(function() {
          $('#btn').click(function (evt) {
               evt.preventDefault();
            var str = $('#inp').val()
            var link='http://localhost:3000/'
            var tmp="";
            if(str==null || str == ''){
              alert('Please provide input URL.');
              return false;
            }
            else{
               $.ajax({
               //  async: false,
                   type : "POST",
              // cache : false,
                    url : '/',
                   data : { forshort : str },          // multiple data  in form of object are sent using ajax
                success : function(result){
                             alert('URL has been shortened successfully.');

                             //alert(result.produced);
                             tmp = result.produced;
                             $('#output').val(link+tmp);
                          }

                     });
           }


         return false;
         });
      });
    </script>
  </body>
</html>
